<Window x:Class="GuiClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GuiClient"
        mc:Ignorable="d"
        Title="Polfan ChatBot" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterScreen"
        Background="CornflowerBlue"
>
    <Grid>
        <TextBlock Name="connectionStatus" Height="auto" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="18" Margin="10" FontWeight="Bold" Foreground="Red">Disconnected</TextBlock>
        <WebBrowser Width="600" Height="360" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 0, 0, 120" Name="chatBox"></WebBrowser>
        <TextBox Name="message" Height="28" Width="600" Background="White" VerticalAlignment="Center" Margin="0, 290, 0, 0" Padding="5" KeyDown="OnEnterKeyDown_Handler"></TextBox>
        <Button 
            Width="100" 
            Height="50" 
            FontSize="14"
            VerticalAlignment="Bottom"
            Margin="50"
            HorizontalAlignment="Center"
            Click="ConnectButton_Handler"
            Name="connectBtn"
        >
            Połącz
        </Button>
    </Grid>
</Window>
