<Window x:Class="GuiClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GuiClient"
        mc:Ignorable="d"
        Title="Polfan ChatBot" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterScreen"
        Background="CornflowerBlue"
>
    <Grid>
        <RichTextBox Width="600" Background="Black" Foreground="White" Margin="100,68,100,166" Name="rtb" />
        <TextBlock Margin="20" Foreground="Red" FontSize="16" FontWeight="Bold" Name="connectionStatus">Disconnected</TextBlock>
        <Button 
            Width="100" 
            Height="50" 
            FontSize="14"
            VerticalAlignment="Bottom"
            Margin="50"
            HorizontalAlignment="Center"
            Click="ConnectButton_Handler"
            Name="connectBtn"
        >
            Connect
        </Button>
    </Grid>
</Window>
