<Window x:Class="GuiClient.FileDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GuiClient"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Height="250" Width="550">
    <DockPanel Margin="10">
        <WrapPanel HorizontalAlignment="Center" DockPanel.Dock="Top" Margin="0,0,0,10">
            <Label  Width="auto" Content="Wybierz plugin"/>
            <Button Margin="20, 0, 0, 0" Width="75" Name="loadPluginBtn" Click="LoadPluginBtn_Click">Wczytaj</Button>
        </WrapPanel>
        <ListBox Name="pluginFiles" Background="LightGray"/>
    </DockPanel>
</Window>
